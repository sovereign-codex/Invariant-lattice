{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Access Envelope",
  "description": "Defines sovereignty, visibility, and usage rights for a Meta-Hash.",
  "type": "object",
  "required": [
    "visibility",
    "recall_rights",
    "write_rights",
    "export_rights"
  ],
  "properties": {
    "visibility": {
      "type": "string",
      "enum": ["private", "consortium", "public"]
    },
    "recall_rights": {
      "type": "string",
      "enum": ["manual_only", "auto_low_risk", "auto_all"]
    },
    "write_rights": {
      "type": "string",
      "enum": ["origin_only", "multi_avot", "open_with_review"]
    },
    "export_rights": {
      "type": "string",
      "enum": ["forbidden", "derived_only", "full"]
    },
    "jurisdiction": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Domains or environments where application is permitted"
    },
    "notes": {
      "type": "string"
    }
  }
}